<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', {title: 'Agregar Productos', css:
  'addProduct.css'}) %>

  <body>
    
    <%- include('../partials/header.ejs') %>

    <main>
      <div class="add-product" id="productForm">
        <h1>AGREGAR PRODUCTO</h1>
        <form action="/products/add" method="post" enctype="multipart/form-data">

          <div class="add-product-field">
            <label for="name">NOMBRE </label>
            <input type="text" name="name" id="name" required />
          </div>

          <div class="add-product-field">
            <label for="type">TIPO </label>
            <input type="text" name="type" id="type" required/>
          </div>

          <div class="add-product-field">
            <label for="barber">PELUQUERO </label>
            <input type="text" name="barber" id="barber" required/>
          </div>

          <div class="add-product-field">
            <label for="description">DESCRIPCIÓN </label>
            <input type="text" name="description" id="description" required />
          </div>

          <div class="add-product-field">
            <label for="image">IMAGEN </label>
            <input type="file" name="image" id="image" accept="image/png, image/jpeg"/>
          </div>

          <div class="buttons">
            <button type="submit" class="add">AGREGAR</button>
            <button type="reset" class="reset">BORRAR</button>
          </div>
        </form>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %>

  <div id="successMessage" style="display: none;">
    Producto agregado correctamente.
  </div>
  
  <script>
      document.getElementById("productForm").addEventListener("submit", function(event) {
  
          // Mostrar el mensaje de éxito
          document.getElementById("successMessage");
      });
  </script>
  </body>
</html>
