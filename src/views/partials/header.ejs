<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Mohave:wght@300&family=Roboto:wght@100;300&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/4b3437fcea.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/header.css">
    <title>Barbería Aukany</title>
</head>
<header>
    <div class="header-content">
        <div class="logo">
            <a href="/"><img src="/images/aukany-logo.png"></a>
        </div>

        <div class="icons">
            <% if (locals.isLogged) { %>
                <div class="welcome">¡Bienvenido <%= locals.userLogged.name %>!</div>
                <div class="dropdown-menu">
                    <figure>
                        <img src="/images/users/<%= locals.userLogged.image %>" alt="">
                    </figure>
                    <div class="dropdown-content">
                        <a href="/users/profile">Profile</a>
                        <a href="/users/logout">Logout</a>
                    </div>
                </div>
            <% } else { %>
                <div class="user">
                    <a href="/users/login">
                        <div class="iniciar-sesion">Iniciar sesión</div>
                        <i class="fa-solid fa-circle-user"></i>
                    </a>
                </div>
            <% } %>

            <div class="burger">
                <label for="check" class="open-menu"><i class="fa-solid fa-bars"></i></label>
            </div>
        </div>
    </div>

    <input type="checkbox" id="check">

    <nav>
        <ul class="nav-bar">
            <label for="check" class="close-menu"><i class="fas fa-times"></i></label>

            <% if (locals.isLogged) { %>
                <li><a href="/users/profile"><img src="/images/users/<%= locals.userLogged.image %>" alt=""></a></li>
            <% } %>
            
            <li><a href="/">INICIO</a></li>
            <li><a href="/products">CORTES</a></li>
            <li><a href="/us">NOSOTROS</a></li>
            <li><a href="/contact">CONTACTO</a></li>

            <% if (locals.isLogged) { %>
                <li class="ocultar"><a href="/users/logout">CERRAR SESIÓN</a></li>
            <% } %>
        </ul>
    </nav>
</header>